@using TaskModel = Mission08_Team0111.Models.Task
@model IEnumerable<TaskModel>

@{
    ViewData["Title"] = "Quadrants";
    var quadrant1 = Model.Where(t => t.Quadrant == 1).ToList();
    var quadrant2 = Model.Where(t => t.Quadrant == 2).ToList();
    var quadrant3 = Model.Where(t => t.Quadrant == 3).ToList();
    var quadrant4 = Model.Where(t => t.Quadrant == 4).ToList();
}

<div class="container-fluid mt-3">
    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="alert alert-success">@successMessage</div>
    }
    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="row mb-3">
        <div class="col">
            <h2>Eisenhower Quadrants</h2>
            <p class="text-muted mb-0">Only incomplete tasks are shown.</p>
        </div>
        <div class="col-auto">
            <a asp-action="Add" class="btn btn-primary">Add Task</a>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-6 text-center fw-semibold">Urgent</div>
        <div class="col-6 text-center fw-semibold">Not Urgent</div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-6">
            <div class="card h-100 border-danger">
                <div class="card-header fw-semibold">Quadrant I: Important / Urgent</div>
                <div class="card-body">
                    @if (!quadrant1.Any())
                    {
                        <p class="text-muted mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        @foreach (var task in quadrant1)
                        {
                            <div class="border rounded p-2 mb-2">
                                <div><strong>@task.Title</strong></div>
                                <div class="small text-muted">
                                    Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")
                                    | Category: @(task.Category?.CategoryName ?? "Unassigned")
                                </div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-action="MarkComplete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Mark Complete</button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card h-100 border-warning">
                <div class="card-header fw-semibold">Quadrant II: Important / Not Urgent</div>
                <div class="card-body">
                    @if (!quadrant2.Any())
                    {
                        <p class="text-muted mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        @foreach (var task in quadrant2)
                        {
                            <div class="border rounded p-2 mb-2">
                                <div><strong>@task.Title</strong></div>
                                <div class="small text-muted">
                                    Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")
                                    | Category: @(task.Category?.CategoryName ?? "Unassigned")
                                </div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-action="MarkComplete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Mark Complete</button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card h-100 border-info">
                <div class="card-header fw-semibold">Quadrant III: Not Important / Urgent</div>
                <div class="card-body">
                    @if (!quadrant3.Any())
                    {
                        <p class="text-muted mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        @foreach (var task in quadrant3)
                        {
                            <div class="border rounded p-2 mb-2">
                                <div><strong>@task.Title</strong></div>
                                <div class="small text-muted">
                                    Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")
                                    | Category: @(task.Category?.CategoryName ?? "Unassigned")
                                </div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-action="MarkComplete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Mark Complete</button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card h-100 border-secondary">
                <div class="card-header fw-semibold">Quadrant IV: Not Important / Not Urgent</div>
                <div class="card-body">
                    @if (!quadrant4.Any())
                    {
                        <p class="text-muted mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        @foreach (var task in quadrant4)
                        {
                            <div class="border rounded p-2 mb-2">
                                <div><strong>@task.Title</strong></div>
                                <div class="small text-muted">
                                    Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")
                                    | Category: @(task.Category?.CategoryName ?? "Unassigned")
                                </div>
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-action="MarkComplete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Mark Complete</button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
